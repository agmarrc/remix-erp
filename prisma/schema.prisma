// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      String   @id @default(uuid())
  email   String   @unique
  name    String
  passwordHash String
  companies Company[]
  owner RoleList[] @relation(name: "owner")
  guest RoleList[] @relation(name: "guest")
}

model Role {
  id      String   @id @default(uuid())
  description    String
}

model RoleList {
  id    String   @id @default(uuid())
  owner User @relation(fields: [ownerId], references: [id], name: "owner")
  ownerId String
  guest User @relation(fields: [guestId], references: [id], name: "guest")
  guestId String
  company Company @relation(fields: [companyId], references: [id])
  companyId String 
}

model Company {
  id      String   @id @default(uuid())
  name    String
  user    User @relation(fields: [userId], references: id)
  userId  String
  campus Campus[]
  roleList RoleList[]
}

model Campus {
  id      String   @id @default(uuid())
  name    String
  company Company @relation(fields: [companyId], references: [id])
  companyId String
  modules Module[]
}

model Module {
  id      String   @id @default(uuid())
  name    String
  campus Campus @relation(fields: [campusId], references: [id])
  campusId String
  catalogues Catalogue[]
}

model Catalogue {
  id      String   @id @default(uuid())
  name    String
  module Module @relation(fields: [moduleId], references: [id])
  moduleId String
}
